{
  "appId": "com.cajkontrolpro.app",
  "productName": "Caja Control Pro",
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "files": [
    "dist-react/**/*",
    "electron/**/*",
    "node_modules/**/*",
    ".env",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Caja Control Pro"
  },
  "portable": {
    "artifactName": "CajaControlPro-${version}.exe"
  }
}
